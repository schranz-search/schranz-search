{
    "name": "laravel/laravel",
    "type": "project",
    "description": "The Laravel Framework.",
    "keywords": ["framework", "laravel"],
    "license": "MIT",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^8.1",
        "guzzlehttp/guzzle": "^7.2",
        "schranz-search/seal": "^0.4",
        "schranz-search/laravel-package": "^0.4",
        "laravel/framework": "^10.0",
        "laravel/sanctum": "^3.2",
        "laravel/tinker": "^2.8"
    },
    "require-dev": {
        "fakerphp/faker": "^1.9.1",
        "laravel/pint": "^1.0",
        "laravel/sail": "^1.18",
        "mockery/mockery": "^1.4.4",
        "nunomaduro/collision": "^7.0",
        "nunomaduro/larastan": "^2.0",
        "pestphp/pest": "^2.16",
        "php-cs-fixer/shim": "^3.51",
        "phpstan/extension-installer": "^1.2",
        "phpstan/phpstan": "^1.10",
        "phpstan/phpstan-phpunit": "^1.3",
        "rector/rector": "^1.0",
        "schranz-search/seal-algolia-adapter": "^0.4",
        "schranz-search/seal-elasticsearch-adapter": "^0.4",
        "schranz-search/seal-loupe-adapter": "^0.4",
        "schranz-search/seal-meilisearch-adapter": "^0.4",
        "schranz-search/seal-memory-adapter": "^0.4",
        "schranz-search/seal-multi-adapter": "^0.4",
        "schranz-search/seal-opensearch-adapter": "^0.4",
        "schranz-search/seal-read-write-adapter": "^0.4",
        "schranz-search/seal-redisearch-adapter": "^0.4",
        "schranz-search/seal-solr-adapter": "^0.4",
        "schranz-search/seal-typesense-adapter": "^0.4",
        "spatie/laravel-ignition": "^2.0",
        "symfony/css-selector": "^6.2",
        "symfony/dom-crawler": "^6.2"
    },
    "conflict": {
        "react/promise": "<2.2.0"
    },
    "repositories": [
        {
            "type": "path",
            "url": "./../../packages/*",
            "options": {
                "symlink": true
            }
        },
        {
            "type": "path",
            "url": "./../../integrations/*",
            "options": {
                "symlink": true
            }
        }
    ],
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force",
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\"",
            "@php artisan key:generate --ansi"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ],
        "post-install-cmd": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\"",
            "@php artisan key:generate --ansi"
        ],
        "test": [
            "Composer\\Config::disableProcessTimeout",
            "vendor/bin/pest"
        ],
        "phpstan": "@php vendor/bin/phpstan analyze",
        "lint-rector": "@php vendor/bin/rector process --dry-run",
        "lint-php-cs": "@php vendor/bin/php-cs-fixer fix --verbose --diff --dry-run",
        "lint": [
            "@phpstan",
            "@lint-php-cs",
            "@lint-rector",
            "@lint-composer"
        ],
        "lint-composer": "@composer validate --strict --no-check-publish",
        "rector": "@php vendor/bin/rector process",
        "php-cs-fix": "@php vendor/bin/php-cs-fixer fix",
        "fix": [
            "@rector",
            "@php-cs-fix"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true,
            "phpstan/extension-installer": true
        }
    }
}
