{
    "name": "schranz-search/seal-meilisearch-adapter",
    "description": "An adapter to support meilisearch in schranz-search/seal search abstraction.",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "schranz-search",
        "schranz-search-adapter",
        "seal-adapter",
        "search-client",
        "meilisearch"
    ],
    "autoload": {
        "psr-4": {
            "Schranz\\Search\\SEAL\\Adapter\\Meilisearch\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Schranz\\Search\\SEAL\\Adapter\\Meilisearch\\Tests\\": "tests"
        }
    },
    "authors": [
        {
            "name": "Alexander Schranz",
            "email": "alexander@sulu.io"
        }
    ],
    "require": {
        "php": "^8.1",
        "schranz-search/seal": "^0.5",
        "meilisearch/meilisearch-php": "^1.0",
        "psr/container": "^1.0 || ^2.0"
    },
    "require-dev": {
        "guzzlehttp/guzzle": "^7.5",
        "http-interop/http-factory-guzzle": "^1.0",
        "php-cs-fixer/shim": "^3.51",
        "phpstan/extension-installer": "^1.2",
        "phpstan/phpstan": "^1.10",
        "phpstan/phpstan-phpunit": "^1.3",
        "phpunit/phpunit": "^10.3",
        "rector/rector": "^1.0"
    },
    "scripts": {
        "test": [
            "Composer\\Config::disableProcessTimeout",
            "vendor/bin/phpunit"
        ],
        "phpstan": "@php vendor/bin/phpstan analyze",
        "lint-rector": "@php vendor/bin/rector process --dry-run",
        "lint-php-cs": "@php vendor/bin/php-cs-fixer fix --verbose --diff --dry-run",
        "lint": [
            "@phpstan",
            "@lint-php-cs",
            "@lint-rector",
            "@lint-composer"
        ],
        "lint-composer": "@composer validate --strict",
        "rector": "@php vendor/bin/rector process",
        "php-cs-fix": "@php vendor/bin/php-cs-fixer fix",
        "fix": [
            "@rector",
            "@php-cs-fix"
        ]
    },
    "repositories": [
        {
            "type": "path",
            "url": "./../*",
            "options": {
                "symlink": true
            }
        }
    ],
    "minimum-stability": "dev",
    "config": {
        "allow-plugins": {
            "php-http/discovery": true,
            "phpstan/extension-installer": true
        }
    }
}
